

<!-- Modal Create Account Window -->
    <div class="modal fade" id="create" tabindex="-1" role="dialog" aria-labelledby="CreateAccount" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <%= render 'layouts/errors' %>
      
      <%= form_for :account, url: accounts_path do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="CreateAccount">Create Account</h4>
      </div>
      <div class="modal-body">
        <div class="input-group">
          <%= f.label :username, class:"input-group-addon" %>
      <%= f.text_field :username, class:"form-control", placeholder:"Username" %>
        </div>
        &nbsp;
        <div class="input-group">
      <%= f.label :password, class:"input-group-addon" %>
    <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
        </div>
        &nbsp;
        <div class="input-group">
      <%= f.label :confirm_password, class:"input-group-addon" %>
    <%= f.password_field :password_confirmation, class:"form-control",placeholder:"Confirm Password" %>
        </div>
        &nbsp;
        <div class="input-group">
      <%= f.label :birthday, class:"input-group-addon" %>
      <%= f.text_field :birthday, class:"form-control",placeholder:"mm/dd/YYYY" %>
        </div>
        &nbsp;
        <div class="input-group">
          <%= f.label :email, class:"input-group-addon" %>
          <%= f.text_field :email, class:"form-control", placeholder:"Email Address" %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <%= f.submit "Create Account", class:"btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>